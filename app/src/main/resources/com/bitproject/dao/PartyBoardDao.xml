<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.bitproject.dao.PartyBoardDao">

  <resultMap type="partyBoard" id="partyBoardMap">
		<id column="party_no" property="partyNo"/>
		<result column="title" property="title"/>
    <association property="writer" javaType="member">
      <id column="p_mno" property="mno"/>
      <result column="p_nickname" property="nickName"/>
    </association>    
  </resultMap>

  <select id="findAll" resultMap="partyBoardMap">
  select
    p.party_no,
    p.title,
    p.reg_date,
    p.party_fee,
    p.meeting_date,
    p.max_member,
    p.alcohol_type,
    p.alcohol_limit,
    p.address,
    m.mno as p_mno,
    m.nickname as p_nickname
  from 
    party p
    inner join member m on (p.writer = m.mno)
  order by 
    p.party_no desc;
  </select>
  
  <insert id="insert" parameterType="PartyBoard">
    insert into party(writer,title,contents,address,party_fee,meeting_date,max_member,alcohol_type,alcohol_limit) 
    values(#{writer.mno},#{title},#{contents},#{address},#{partyFee},#{meetingDate},#{maxMember},#{alcoholType},#{alcoholLimit})
  </insert>
  
  </mapper>






