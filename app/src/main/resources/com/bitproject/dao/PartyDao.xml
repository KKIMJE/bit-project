  <select id="findAll" resultMap="partyMap2">
  select
    p.party_no,
    p.title,
    p.reg_date,
    p.party_fee,
    p.meeting_date,
    p.max_member,
    p.alcohol_type,
    p.alcohol_limit,
    p.address,
    m.mno as p_mno,
    m.nickname as p_nickname
  from 
    party p
    inner join member m on (p.writer = m.mno)
  order by 
    p.party_no desc;
  </select>
  
  <insert id="insert" parameterType="Party">
    insert into party(writer,title,contents,address,party_fee,meeting_date,max_member,alcohol_type,alcohol_limit) 
    values(#{writer.mno},#{title},#{contents},#{address},#{partyFee},#{meetingDate},#{maxMember},#{alcoholType},#{alcoholLimit})
  </insert>
  
  <select id="findByNo" resultMap="partyMap2" parameterType="int">
  select
    p.party_no,
    p.title,
    p.reg_date,
    p.party_fee,
    p.meeting_date,
    p.max_member,
    p.alcohol_type,
    p.alcohol_limit,
    p.address,
    m.mno as p_mno,
    m.nickname as p_nickname,
    pc.party_comment_no,
    pc.party_comment_contents,
    pc.comment_date,
    m2.mno as pcw_mno,
    m2.nickname as pcw_nickname,
    m2.m_img as pcw_img
  from party p
    inner join member m on p.writer=m.mno
    left outer join party_comment pc on p.party_no=pc.party_no
    inner join member m2 on pc.writer=m2.mno
  where 
    p.party_no=#{no}
  </select>
  
  </mapper>
  
