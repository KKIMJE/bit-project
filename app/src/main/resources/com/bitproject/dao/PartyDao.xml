  <select id="findAll" resultMap="partyMap2">
  select
    p.party_no,
    p.title,
    p.reg_date,
    p.party_fee,
    p.meeting_date,
    p.max_member,
    p.alcohol_type,
    p.alcohol_limit,
    m.nickname,
    m.m_img,
    s.address
  from party p
    inner join member m on p.mno=m.mno
    inner join store s on p.store_no=s.store_no
  order by 
    p.party_no desc;
  </select>
  
  <insert id="insert" parameterType="Party">
    insert into party(mno,nickname,title,contents,address,party_fee,meeting_date,max_member,alcohol_type,alcohol_limit) 
    values(#{mno},#{nickName},#{title},#{contents},#{address},#{partyFee},#{meetingDate},#{maxMember},#{alcoholType},#{alcoholLimit})
  </insert>
  
  <select id="findByNo" resultMap="partyMap2" parameterType="int">
  select
    p.title,
    p.alcohol_type,
    p.alcohol_limit,
    p.party_fee,
    p.meeting_date,
    p.max_member,
    p.alcohol_type,
    m.nickname as m_nickname,
    pc.nickname as pc_nickname,
    pc.m_img,
    pc.party_comment_contents
  from party p
    inner join member m on p.mno=m.mno
    left outer join party_comment pc on p.party_no=pc.party_no
  where 
    p.party_no=#{no}
  </select>
  
