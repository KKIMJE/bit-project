      <result column="party_no" property="partyNo"/>
      <result column="party_comment_contents" property="partyCommentContents"/>
      <result column="comment_date" property="commentDate"/>
      <result column="update_date" property="updateDate"/>
    </collection>
    
  </resultMap>

  
