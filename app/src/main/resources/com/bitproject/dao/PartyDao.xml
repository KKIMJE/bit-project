<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.bitproject.dao.PartyDao">

  <resultMap type="party" id="partyMap">
    <association property="writer" javaType="member">
      <id column="mno" property="mno"/>
    </association>
  </resultMap>

  <select id="findAll" resultMap="partyMap">
    select 
      p.title,
      p.party_fee,
      p.meeting_date,
      p.max_member,
      p.alcohol_type,
      p.alcohol_limit,
      p.reg_date,
      m.mno,
      m.name,
      s.store_no,
      s.name
    from 
      party p
      inner join member m on (p.writer = m.mno)
      inner join store s on (p.store = s.storeNo) 
    order by 
      p.party_no desc
  </select>

	<select id="findByNo" resultMap="partyMap" parameterType="int">
    select 
      p.title,
      p.party_fee,
      p.meeting_date,
      p.max_member,
      p.alcohol_type,
      p.alcohol_limit,
      m.mno,
      m.name,
      s.store_no,
      s.name
    from 
      party p
      inner join member m on (p.writer = m.mno)
      inner join store s on (p.store = s.storeNo) 
    where 
      p.party_no=#{no}
  </select>
  
    <insert id="insert" parameterType="Party">
    insert into party(title,contents,partyFee,meetingDate,maxMember,alcoholType,alcoholLimit,store,writer) 
    values(#{title},#{contents},#{party_fee},#{meeting_date},#{max_member},#{alcohol_type},#{alcohol_limit},#{store.storeNo},#{write.mno})
  </insert>

  <update id="update" parameterType="Party">
    update party set
      title=#{title}, 
      contents=#{contents}
    where 
      party_no=#{partyNo} and writer=#{writer.mno}
  </update>

  <delete id="delete" parameterType="party">
    delete from party 
    where party_no=#{partyNo}
  </delete>

</mapper>


