<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.bitproject.dao.PartyDao">

  <resultMap type="party" id="partyMap">
    <id column="party_no" property="partyNo"/>
  </resultMap>

  <select id="findAll" resultMap="partyMap">
    select 
      partyNo,
      mno,
      storeNo,
      title,
      party_fee,
      meeting_date,
      maxMember,
      alcoholType,
      meeting_date,
      meeting_date,
      reg_date,
      update_date,
      view_count
    from 
      party 
    order by 
      party_no desc
  </select>

  <insert id="insert" parameterType="Party">
    insert into party(mno,community_no,title,contents,view_count) 
    values(#{mNo},#{communityNo},#{title},#{contents},#{viewCount})
  </insert>

	<select id="findByNo" resultMap="partyMap" parameterType="int">
    select 
      mno,
      community_no,
      title,
      contents,
      view_count,
      reg_date
      view_count
    from 
      party
    where 
      party_no=#{no}
  </select>

  <update id="update" parameterType="Party">
    update party set
      title=#{title}, 
      contents=#{contents}
    where 
      party_no=#{boardNo}
  </update>

  <delete id="delete" parameterType="int">
    delete from party 
    where party_no=#{no}
  </delete>

  <update id="increaseViewCount" parameterType="int">
    update party set 
      view_count=view_count + 1 
    where party_no=#{no}
  </update>

</mapper>


